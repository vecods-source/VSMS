    <script>
        const boxes = document.querySelectorAll(".box1");

        boxes.forEach((box) => {
        const imageBox = box.querySelector(".img-course-cont > img");

        box.addEventListener('mouseenter', () => {
            box.classList.add('hover-effect');  
            if (imageBox) {
                imageBox.classList.add('img-effect');
            }
            console.log("Hello Mouse Enter");
        });

        box.addEventListener('mouseleave', () => {
            box.classList.remove('hover-effect');  
            if (imageBox) {
                imageBox.classList.remove('img-effect');
            }
        });
        });
    </script>
